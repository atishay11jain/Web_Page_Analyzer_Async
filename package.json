{
  "name": "web-page-analyzer",
  "version": "1.0.0",
  "description": "Asynchronous web page analysis service with resilient architecture",
  "main": "src/api/server.js",
  "scripts": {
    "start": "node src/api/server.js",
    "worker": "node src/worker/worker.js",
    "dev:api": "nodemon src/api/server.js",
    "dev:worker": "nodemon src/worker/worker.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "web-scraper",
    "async",
    "bull",
    "queue",
    "mongodb",
    "redis"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bull": "^4.11.5",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "mongoose": "^8.0.0",
    "ulid": "^2.3.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
